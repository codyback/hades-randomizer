    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-vue": "^9.1.1",
    "lerna": "^5.1.4",
